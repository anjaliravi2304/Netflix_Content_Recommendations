import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import nltk
import re
from nltk.corpus import stopwords
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.decomposition import PCA
from sklearn.cluster import KMeans
from sklearn.metrics.pairwise import cosine_similarity
nltk.download('stopwords')

df = pd.read_csv("netflix_titles.csv")
print(df.shape)
print(df.columns)
df.info()
print(df.isnull().sum())
plt.figure()
sns.countplot(x='type', data=df)
plt.show()
top_countries = df['country'].value_counts().head(10)
plt.figure(figsize=(8,4))
sns.barplot(x=top_countries.values, y=top_countries.index)
plt.show()
plt.figure(figsize=(10,4))
sns.countplot(y='rating', data=df, order=df['rating'].value_counts().index)
plt.show()
plt.figure(figsize=(8,4))
sns.histplot(df['release_year'], bins=20)
plt.show()
df.fillna('', inplace=True)
df['content'] = (
    df['description'] + ' ' +
    df['listed_in'] + ' ' +
    df['cast'] + ' ' +
    df['director']
)
stop_words = set(stopwords.words('english'))
def clean_text(text):
    text = text.lower()
    text = re.sub(r'[^a-zA-Z ]', '', text)
    words = text.split()
    words = [w for w in words if w not in stop_words]
    return ' '.join(words)
df['content'] = df['content'].apply(clean_text)
tfidf = TfidfVectorizer(max_features=5000)
X = tfidf.fit_transform(df['content'])
pca = PCA(n_components=100, random_state=42)
X_reduced = pca.fit_transform(X.toarray())
inertia = []
for k in range(2, 15):
    km = KMeans(n_clusters=k, random_state=42)
    km.fit(X_reduced)
    inertia.append(km.inertia_)
plt.figure()
plt.plot(range(2,15), inertia, marker='o')
plt.show()

kmeans = KMeans(n_clusters=10, random_state=42)
df['cluster'] = kmeans.fit_predict(X_reduced)

similarity = cosine_similarity(X)

def recommend(title, n=5):
    if title not in df['title'].values:
        return "Title not found in dataset"
    idx = df[df['title'] == title].index[0]
    scores = list(enumerate(similarity[idx]))
    scores = sorted(scores, key=lambda x: x[1], reverse=True)
    rec_indices = [i[0] for i in scores[1:n+1]]
    return df['title'].iloc[rec_indices]

print(recommend("3 Idiots"))
